<div class="container">
  <div class="mt-3 p-4">
    <div class="card-product">
      <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400, crop: :fill if @cocktail.photo.attached? %>
        <div class="card-product-infos">
          <h2><%= @cocktail.name %> <i class="fas fa-cocktail"></i></h2>
          <% @cocktail.doses.each do |dose| %>
            <p>
              <%= dose.description %> <%= dose.ingredient.name %>  
                <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %> 
                  <i class="fas fa-trash"></i></p>
                <% end %>
          <% end %>
            </p>
        </div>
    </div>

    <p><%= link_to 'Back to Cocktails', root_path, class: 'btn btn-outline-secondary'  %> | 
    <%= link_to "Delete Cocktail?", cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' %></p>
    <hr>
    <h3>Add a dose to your drink:</h3>
    <%= render 'doses/form' %>
  </div>
</div>