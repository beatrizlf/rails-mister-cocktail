<div class="container">
  <div class="mt-3 p-4">
   <h1>Your drink: <strong><%= @cocktail.name %></strong></h1>
   <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill if @cocktail.photo.attached? %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-warning btn-sm' %>
        </li>
      <% end %>
    </ul>

    <p><%= link_to 'Back to Cocktails', root_path, class: 'btn btn-outline-secondary'  %></p>
    <p><%= link_to "Delete Cocktail?", cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' %></p>

    <h3>Add a dose to your drink:</h3>
    <%= render 'doses/form' %>
  </div>
</div>